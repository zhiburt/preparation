<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    @*<link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.min.css" />*@
    <link rel="stylesheet" href="~/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/font-awesome/css/font-awesome.min.css" />
    <link rel="stylesheet" href="~/css/main.css" />
    @RenderSection("css", false)
    <title>@ViewData["Title"]</title>
</head>
<body>
    @if (IsSectionDefined("navbar"))
    {
        @RenderSection("navbar")
    }
    else
    {
        <nav class="navbar navbar-expand-md navbar-white bg-white">
            <div class="container">

                <a class="navbar-brand" href="#">
                    <img src="~/images/logo/logo_v2.svg" class="d-inline-block img-fluid align-top p-0" width="50" height="100" alt="">
                </a>
                <button class="navbar-toggler" aria-expanded="false" aria-controls="navbarColor02" aria-label="Toggle navigation" type="button" data-target="#navbarColor02" data-toggle="collapse">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarColor02">
                    <ul class="navbar-nav mr-auto">
                        <li class="nav-item active">
                            <a class="nav-link" href="#">Home <span class="sr-only">(current)</span></a>
                        </li>
                        <li class="nav-item disabled">
                            <a class="nav-link" asp-controller="Search" asp-action="Index">search</a>
                        </li>

                    </ul>
                    @{ await Html.RenderPartialAsync("_UserButtonInNavbar");}


                    <a asp-controller="Cart" asp-action="Index"><i class="fa fa-2x fa-shopping-cart text-info"></i></a>

                    @*<form class="form-inline my-2 my-lg-0">
                            <input class="form-control mr-sm-2" type="text" placeholder="Search">
                            <button class="btn btn-secondary my-2 my-sm-0" type="submit">Search</button>
                        </form>*@
                </div>
            </div>
        </nav>
    }
    <div class="@( ViewBag?.ContainerFluid == true ? "container-fluid" : "container")">

        <div class="main">
            @RenderBody()
        </div>
    </div>

    <footer>

        @if (IsSectionDefined("footer"))
        {
            @RenderSection("footer")
        }
        else
        {
            <div class="footer bg-secondary">
                <div class="container-fluid main-footer">
                    <div class="row">


                        <div class="col col-4">
                            <h5 class="">Our advantages</h5>
                            <ul>
                                <li>Phasellus iaculis neque</li>
                                <li>Purus sodales ultricies</li>
                                <li>Vestibulum laoreet porttitor sem</li>
                                <li>Ac tristique libero volutpat at</li>
                            </ul>
                            To switch directories, type <kbd>cd</kbd> followed by the name of the directory.<br>
                            To edit settings, press <kbd><kbd>ctrl</kbd> + <kbd>,</kbd></kbd>


                        </div>
                        <div class="col col-8">
                            <h5 class="">Hello End footer</h5>
                            <p class="display-4">Hello I'm Maxim</p>
                        </div>
                        <div class="col col-12">
                            <h>
                                Designed and built with all the love in the world by @@mdo and @@fat. Maintained by the core team with the help of our contributors.
                                Currently v4.1.3. Code licensed MIT, docs CC BY 3.0.
                            </h>
                        </div>
                        <div class="col col-12 d-flex flex-row-reverse bd-highlight">
                            <div class="p-2 bd-highlight text-right">
                                <p>
                                    <a class="" href="#">Privacy</a>
                                    <a class="" href="#">Terms</a>
                                    © 2017-2018 Company, Inc. ·
                                </p>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        }
    </footer>
    <script src="~/lib/jquery/jquery.min.js"></script>
    <script src="lib/tooltip.js/tooltip.min.js"></script>
    @*<script src="~/lib/popper/popper.min.js"></script>*@
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.11.0/umd/popper.min.js" integrity="sha384-b/U6ypiBEHpOf/4+1nzFpr53nxSS+GLCkfwBdFNTxtclqqenISfwAzpKaMNFNmj4" crossorigin="anonymous"></script>
    <script src="~/lib/bootstrap/js/bootstrap.min.js"></script>
    @RenderSection("js", false)
</body>
</html>
