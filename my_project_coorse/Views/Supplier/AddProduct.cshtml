@model preparation.ViewModels.Supplier.AddProductViewModel

@{
    Layout = "_Layout";
}

<div class="d-flex align-items-center p-3 my-3 text-white-50 bg-purple rounded shadow-sm">
    <img width="48" height="48" class="mr-3" alt="" src="~/images/home/307609.svg">
    <div class="text-secondary">
        <h6 class="mb-0 ">Health</h6>
        <small>Since 2011</small>
    </div>
</div>

<div>
    @await Html.PartialAsync("_Companys", null, ViewData)
</div>

<div class="my-3 p-3 bg-white rounded shadow-sm">
    <div class="container">
        <div class="row">
            <div class="col-md-5 order-md-1">
                <form method="post" asp-action="AddProduct">
                    <div asp-validation-summary="ModelOnly"></div>
                    <div class="row">
                        <div class="col-md-4 mb-3">
                            <label asp-for="Price"></label>
                            <input class="form-control" asp-for="Price">
                            <span asp-validation-for="Price"></span>
                        </div>
                        <div class="col-md-4 mb-3">
                            <label asp-for="ProductId"></label>
                            <input class="form-control" asp-for="ProductId">
                            <span asp-validation-for="ProductId"></span>
                        </div>
                        <div class="col-md-4 mb-3">
                            <label asp-for="SupplierId"></label>
                            <input class="form-control" asp-for="SupplierId">
                            <span asp-validation-for="SupplierId"></span>
                        </div>
                    </div>
                    <hr class="mb-4">
                    <button class="btn btn-primary btn-lg btn-block" type="submit">Continue to checkout</button>
                </form>
            </div>
        </div>
        <footer class="my-5 pt-5 text-muted text-center text-small">
            <p class="mb-1">© 2017-2018 Company Name</p>
            <ul class="list-inline">
                <li class="list-inline-item"><a href="#">Privacy</a></li>
                <li class="list-inline-item"><a href="#">Terms</a></li>
                <li class="list-inline-item"><a href="#">Support</a></li>
            </ul>
        </footer>
    </div>
</div>

<div>
    @await Html.PartialAsync("AllPreparations", ViewData["preparations"])
</div>

@section footer
    {

}
